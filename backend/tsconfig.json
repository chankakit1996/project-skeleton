{
  "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "none",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "lib": ["esnext", "dom"],
      "baseUrl": ".",
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["**/config-sample.ts"]
}
